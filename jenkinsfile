pipeline {
    agent any

    environment {
        // Defina suas variáveis de ambiente aqui
        API_URL = 'http://localhost:3333'
        EMAIL = ''
        PASSWORD = ''
        RECIPIENT_EMAIL = ''
        MYSQL_DATABASE = 'database_test'
        MYSQL_ROOT_PASSWORD = '12345'
        REDIS_HOST = 'localhost'
        MYSQL_PASSWORD = '12345'
        MYSQL_PORT = '3307'
        MYSQL_USER = 'root'
        MYSQL_HOST= 'localhost'
        NODE_ENV = 'test'
        PORT = '3333'
        REDIS_PORT = '6379'
        REDIS_PASSWORD = '12345'
        REDIS_PREFIX = 'api'
        // ...
    }

    stages {
        stage('Testes') {
            steps {
                // Adicione os comandos para executar seus testes aqui
                sh 'npm install'
                sh 'docker-compose up -d'
                sh 'yarn dev &'
                sh 'sleep 10'
                sh 'yarn test --testPathPattern=Service.spec.ts'
            }
        }

        stage('Build') {
            steps {
                // Adicione os comandos para fazer o build do seu projeto aqui
                sh 'npm run build'
            }

            post {
                success {
                    archiveArtifacts artifacts: 'dist/', fingerprint: true
                    archiveArtifacts artifacts: 'coverage/lcov-report/index.html', fingerprint: true
                }
            }
        }

        stage('Notificar usuários') {
            steps {
                // Chame seu script para enviar um email aqui
                sh 'node src/modules/users/services/sendEmail.ts'
            }
        }
    }
}
